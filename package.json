{
	"name": "bauhaus-ui",
	"version": "0.0.1",
	"description": "bauhaus-ui",
	"main": "index.js",
	"files": [
		"public/"
	],
	"scripts": {
		"build": "NODE_ENV=production webpack && npm run minify",
		"dev": "webpack --progress --colors --watch",
		"minify": "node uglify.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Dustin Hoffner",
	"license": "MIT",
	"peerDependencies": {
		"express": "^4.13.3"
	},
	"devDependencies": {
		"babel-loader": "^5.3.3",
		"body-parser": "^1.14.2",
		"esformatter-jsx": "^4.1.3",
		"express": "^4.13.3",
		"scribe-editor": "^2.1.1",
		"scribe-plugin-toolbar": "^1.0.0",
		"uglify-js": "^2.5.0",
		"webpack": "^1.12.2",
		"bauhaus-ui-module-utils": "^0.0.1",
		"history": "^2.0.0",
		"lodash": "^4.0.0",
		"object-assign": "^4.0.1",
		"react": "latest",
		"react-dom": "latest",
		"react-look": "latest",
		"react-redux": "latest",
		"redux": "latest",
		"redux-thunk": "latest",
		"superagent": "^1.7.0"
	},
	"esformatter": {
		"plugins": [
			"esformatter-jsx"
		],
		"jsx": {
			"formatJSX": true,
			"attrsOnSameLineAsTag": true,
			"maxAttrsOnTag": 1,
			"firstAttributeOnSameLine": false,
			"spaceInJSXExpressionContainers": " ",
			"alignWithFirstAttribute": true,
			"htmlOptions": {
				"brace_style": "collapse",
				"indent_char": " ",
				"indent_size": 2,
				"max_preserve_newlines": 2,
				"preserve_newlines": true
			}
		}
	}
}
